#popup_sel_map.kv
<PopupSelectMap@Popup>:
    auto_dismiss: False
    title: app.f_let_upper(app.lab_txt["app"]["select_map"])
    background_color: fs22_n
    title_size: '23sp'
    title_font: constants.DIR_FONTS + constants.LABELFONT_M
    title_color: fs22_n
    separator_color: fs22_d
    separator_height: '4dp'
    BoxGrey1:
        padding: 2
        spacing: 2    
        BoxGrey2:
            padding: 2
            spacing: 2
            BoxGrey4:
                padding: 2
                spacing: 2
# Start Middle Box                
                BoxGrey1:
                    orientation: 'vertical'
                    padding: 2
                    spacing: 2
# Oberer Boxteil
                    BoxGrey1:
                        size_hint_y: 0.9
                        spacing: 2
# Box linker teil oben
                        BoxGrey1:
                            orientation: 'vertical'
                            spacing: 2
                            padding: 0, 0, 0, 2
                            BoxBlack:
                                Image:
                                    id: img_map_cho
                            BoxBlack:
                                id: box_index_grid
                                size_hint_y: 0.1
                                padding: 50, 2, 50, 2
# Box rechter Teil oben
                        BoxGrey1:
                            orientation: 'vertical'
                            padding: 2
                            spacing: 2
                            size_hint_x: 0.4
                            BoxBlack:
                                size_hint_y: 0.075
# Label f√ºr den Titelmit den Karteninformationen
                                LabelTitel:
                                    id: l_tit_map_info
                            BoxBlack:
                                orientation: 'vertical'
# Infolinie 1: anzeige Spielname. einfach er Name der Karte
                                BoxInfoLine:
                                    id: row_inf_map_name
                                    size_hint_y: 0.1
# Infolinie 2: anzeige Gegend. location aus dem map_dict
                                BoxInfoLine:
                                    id: row_inf_map_location
                                    size_hint_y: 0.1
# Infolinie 3: anzeige Felderanzahl. num_of_fields aus map_dict
                                BoxInfoLine:
                                    id: row_inf_num_fields
                                    size_hint_y: 0.1
# Infolinie 4: anzeige Felderanzahl. num_of_factories aus map_dict
                                BoxInfoLine:
                                    id: row_inf_num_fact
                                    size_hint_y: 0.1
                                BoxInfoLine:
                                    size_hint_y: 0.1
                                BoxInfoLine:
                                    size_hint_y: 0.1
                                BoxBlack:
                                    padding: 25, 10, 25, 10
                                    BoxGrey1:
                                        padding: 2
                                        BoxGrey4:
                                            padding:2
                                            BoxBlack:
                                                padding: 4
# Bild das die aktuelle Karte anzeigt                                                
                                                Image:
                                                    id: img_map

# Unterer Boxteil                        
                    BoxGrey1:
                        size_hint_y: 0.1
                        spacing: 2
                        BoxBlack:
                            size_hint_x: 0.65
                            padding: 10, 6, 10, 4
                            spacing: 20
                            ButClear:
                                text: '<<'
                                halign: 'center'
                                on_release: root.decr_map_index()
                            ButClear:
                                text: '>>'
                                halign: 'center'
                                on_release: root.incr_map_index()
                        BoxBlack:
                            orientation: 'vertical'
                            size_hint_x: 0.35
                            padding: 10, 6, 10, 4
                            spacing: 4
# Button to start a new game
                            ButRectThin:
                                id: but_start_game
                                font_size: self.height * 0.6
                                halign: 'center'
                                padding: 0
                                on_release: root.start_New_Game()
# Button to close the popup
                            ButRectThin:
                                id: but_cancel
                                font_size: self.height * 0.6
                                halign: 'center'
                                padding: 0
                                on_release: root.dismiss()



