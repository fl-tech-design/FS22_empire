# components.kv
#: import constants constants

###
# Vordefinierte Buttons.
###
<ButtonGrey@Button>:
    canvas.before:
        Color:
            rgba: fs22_n if self.state == 'normal' else fs22_d
        Line:
            width: 1
            rounded_rectangle: (self.x, self.y, self.width, self.height, 25)
    color: fs22_n if self.state == 'normal' else fs22_d
    background_color: 0,0,0,0
    font_name: constants.DIR_FONTS + 'Jura-Medium.otf'
    font_size: self.height * 0.5

<ButRoundThin@Button>:
    canvas.before:
        Color:
            rgba: fs22_n if self.state == 'normal' else fs22_d
        Line:
            width: 1
            rounded_rectangle: (self.x, self.y, self.width, self.height, 25)
    color: fs22_n if self.state == 'normal' else fs22_d
    background_color: 0,0,0,0
    font_name: constants.DIR_FONTS + 'Jura-Medium.otf'
    font_size: self.height * 0.5
    

<ButRoundFat@Button>:
    canvas.before:
        Color:
            rgba: fs22_n if self.state == 'normal' else fs22_d
        Line:
            width: 2
            rounded_rectangle: (self.x, self.y, self.width, self.height, 25)
    color: fs22_n if self.state == 'normal' else fs22_d
    background_color: 0,0,0,0
    font_name: constants.DIR_FONTS + 'Jura-Medium.otf'
    font_size: self.height * 0.5

<ButRectThin@Button>:
    canvas.before:
        Color:
            rgba: fs22_n if self.state == 'normal' else fs22_d
        Line:
            width: 1
            rectangle: (self.x, self.y, self.width, self.height)
    color: fs22_n if self.state == 'normal' else fs22_d
    background_color: 0,0,0,0
    font_name: constants.DIR_FONTS + 'Jura-Medium.otf'
    font_size: self.height * 0.4
    text_size: self.size
    halign: 'left'
    valign: 'center'
    padding: 10, 0, 0, 0



<ButClear@Button>:
    color: fs22_n if self.state == 'normal' else fs22_d
    background_color: 0,0,0,0
    font_name: constants.DIR_FONTS + 'Jura-Medium.otf'
    font_size: self.height * 0.5
###
# Vordefinierte Labels.
###
<LabelTitel@Label>:
    color: grey3
    font_name: constants.DIR_FONTS + 'cmunobx.ttf'
    font_size: self.height * 0.5
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    padding: 10, 0, 0, 0

# Label with Jura-Light font. haligned left. fontcolor=grey3
<LabJuraLight@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    color: grey3
    font_name: constants.DIR_FONTS + 'Jura-Light.otf'
    font_size: self.height * 0.6
    padding: 10, 0, 0, 0,
# Label with Jura-Medium font. haligned left. fontcolor=grey3
<LabJuraMedium@Label>:
    text_size: self.size
    halign: 'left'
    valign: 'middle'
    color: grey3
    font_name: constants.DIR_FONTS + 'Jura-Medium.otf'
    font_size: self.height * 0.65
    padding: 10, 0, 0, 0,
# Label for empty filds in progress...
<LabCsoon@Label>:
    font_name: constants.DIR_FONTS + "BOYCOTT_.ttf"
    font_size: dp(40)
    color: yellow1
    text: "Comming soon..."
###
# Vordefinierte Label-Link's. Aufbau auf einem Label mit markup.
###
<LabButQuit@Label>:
    font_name: constants.DIR_FONTS + 'Jura-Medium.otf'
    font_size: self.height * 0.6
    markup: True
    text: '[ref=world][color=#1f1f1f]QUIT[/color][/ref]'
<LabButHelp@ButClear>:
    text: "?"
    font_size: self.height * 0.8
    on_release: app.popup_control.open_Help_popup(app.scr_man.current)
###
# Vordefinierte Bilder
###
<Logo_Fltech@Image>:
    source: constants.DIR_IMAGES + 'logo-fl-tech.png'
<Logo_Main@Image>:
    source: constants.PATH_TO_MAINLOGO
