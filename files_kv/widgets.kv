# Titelbox
<BoxTitle@BoxGrey1>:
    padding: 1
    size_hint_y: 0.05
    BoxBlack:
        padding: 1
        BoxGrey1:
            padding: 1
            BoxBlack:
                padding: 1
                size_hint_x: 0.1
# Logoimage in titlebox                
                Logo_Main:
            BoxBlack:
