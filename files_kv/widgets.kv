# widgets.kv
<BoxShowSavedGames@BoxBlack>:
    BoxGrey1:
        padding: 1
        BoxBlack:
            padding: 1
            BoxGrey2:
                padding: 1
                BoxGrey3:
                    padding: 2
                    spacing: 2
                    BoxBlack:
                        padding: 2
                        size_hint_x: 0.2
# First Box with Image0
                        FloatLayout:
                            Image:
                                id: img_map
                                pos_hint: {'x': 0, 'y': 0}
                            LabJuraLight:
                                id: l_img_map
                                font_size: self.height * 0.25
                                pos_hint: {'x': 0, 'y': 0}
                    BoxGrey1:
                        orientation: 'vertical'
                        padding: 2
                        spacing: 2
# Box Row 1: saved game name
                        BoxBlack:
                            LabJuraMedium:
                                id: l_tit_g_name
                                color: fs22_d
                            LabJuraLight:
                                id: l_g_name
# Box Row 2
                        BoxBlack:
                            LabJuraMedium:
                                id: l_tit_last_save
                                color: fs22_d
                            LabJuraLight:
                                id: l_last_save
# Box Row 3
                        BoxBlack:
                            LabJuraMedium:
                                id: l_tit_tot_playtime
                                color: fs22_d
                            LabJuraLight:
                                id: l_tot_playtime
# Box Row 4
                        BoxBlack:
                            LabJuraMedium:
                                id: l_tit_tot_playtime
                                color: fs22_d
                            LabJuraLight:
                                id: l_tot_playtime
# Box Buttons                    
                    BoxBlack:
                        orientation: 'vertical'
                        padding: 10, 20, 10, 20
                        spacing: 20
                        size_hint_x: 0.1
# Button load saved game
                        ButRectThin:
                            id: b_load_game
                            halign: 'center'
                            padding: 0
# Button del saved game                        
                        ButRectThin:
                            id: b_del_game
                            halign: 'center'
                            font_size: self.height * 0.37
                            padding: 0
