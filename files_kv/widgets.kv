# Titelbox
<BoxTitle@BoxGrey1>:
    padding: 1
    size_hint_y: 0.05
    BoxBlack:
        padding: 1
        BoxGrey1:
            padding: 1
            BoxBlack:
                padding: 1
                size_hint_x: 0.1
                Logo_Main:
            BoxBlack:
# Label für Seitentitel
                LabelTitel:
                    id: lab_tit
                    font_size: self.height * 0.8
                    halign: 'center'
                    color: grey3
            BoxBlack:
                size_hint_x: 0.15
###
# Bottombox
<BoxBottom@BoxGrey1>:
    padding: 2
    size_hint_y: 0.05
    BoxBlack:
        padding: 10, 3, 10, 3
        spacing: 10
        BoxBlack:
            size_hint_x: 0.3
            Label:
                text: app.app_version
        BoxBlack:
        BoxBlack:
            size_hint_x: 0.3
            ButtonGrey:
                id: but_settings
                font_size: self.height * 0.5
                on_release: app.change_Screen('left', 'setting_page') if app.scr_man.current == 'start_page' else app.change_Screen('right', 'start_page')
        BoxBlack:
            size_hint_x: 0.3
            ButtonGrey:
                id: but_quit
                font_size: self.height * 0.5
                on_release: app.stop()
