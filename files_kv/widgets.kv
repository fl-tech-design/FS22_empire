            BoxBlack:
                size_hint_x: 0.1
# Box Helpbutton
            BoxBlack:
                size_hint_x: 0.05
                LabButHelp:
###
# Bottombox
<BoxBottom@BoxGrey1>:
    padding: 2
    size_hint_y: 0.05
    BoxBlack:
        padding: 10, 3, 10, 3
        spacing: 10
        BoxBlack:
            size_hint_x: 0.3

            Label:
                text: app.app_version
        BoxBlack:
        BoxBlack:
            size_hint_x: 0.3
            ButtonGrey:
                id: but_settings
                font_size: self.height * 0.5
                on_release: app.change_Screen('left', 'page_settings') if app.scr_man.current == 'page_start' else app.change_Screen('right', 'page_start')
        BoxBlack:
            size_hint_x: 0.3
            ButtonGrey:
                id: but_quit
                font_size: self.height * 0.5
                on_release: app.stop()
