# widgets.kv
<BoxShowSavedGames@BoxBlack>:
    BoxGrey1:
        padding: 1
        BoxBlack:
            padding: 1
            BoxGrey2:
                padding: 1
                BoxGrey3:
                    padding: 2
                    spacing: 2
                    BoxBlack:
                        padding: 2
                        size_hint_x: 0.2
                        Image:
                            id: img_map
                    BoxBlack:
                        orientation: 'vertical'
                        padding: 2
                        BoxBlack:
                            LabelTitel:
                                id: l_tit_game_name
                            LabelGrey1:
                                id: l_game_name

                    BoxBlack:
                        orientation: 'vertical'
                        padding: 4, 10, 4, 10
                        spacing: 20
                        size_hint_x: 0.1
                        ButRectThin:
                            id: b_load_game
                            halign: 'center'
                        ButRectThin:
                            id: b_del_game
                            halign: 'center'
