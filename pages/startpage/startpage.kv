#start_page.kv
<StartPage>:
## grauer Rand rund herum
    BoxGrey2:
        padding: 1
## gesamte Box mit den diversen widgets
        BoxBlack:
            orientation: 'vertical'
            spacing: 1
# Start Titelbox
            BoxTitle:
                id: box_tit
# Start Middlebox
            BoxGrey1:
                id: box_mid
                name: 'box_middle_page_1'
                padding: 2
                spacing: 2
###
# Box Left
                BoxBlack:
                    size_hint_x: 0.4
                    padding: 1
                    BoxGrey2:
                        padding: 1
                        spacing: 1
                        orientation: 'vertical'
# Box Userliste
                        BoxBlack:
                            padding: 1
                            BoxGrey1:
                                padding: 2
                                spacing: 10
                                orientation:'vertical'
                                BoxBlack:
                                    size_hint_y: 0.075
# Label registrierte User                                    
                                    LabelTitel:
                                        id: lab_reg_users
                                        font_size: self.height * 0.5
                                BoxBlack:
                                    size_hint_y: 0.1
# Button user 1                                    
                                    ButRectThin:
                                        id: but_uname_1
                                        on_release: root.set_User(self.text)
                                BoxBlack:
                                    size_hint_y: 0.1
# Button user 2                                    
                                    ButRectThin:
                                        id: but_uname_2
                                        on_release: root.set_User(self.text)
                                BoxBlack:
                                    size_hint_y: 0.1
# Button user 3
                                    ButRectThin:
                                        id: but_uname_3
                                        on_release: root.set_User(self.text)
                                BoxBlack:
                                    size_hint_y: 0.1
# Button user 4
                                    ButRectThin:
                                        id: but_uname_4
                                        on_release: root.set_User(self.text)
                                BoxBlack:
                                    size_hint_y: 0.1
# Button user 5
                                    ButRectThin:
                                        id: but_uname_5
                                        on_release: root.set_User(self.text)
# Box Userinfo
                        BoxInfo:
                            id: box_u_info            
# Box Button new user
                        BoxBlack:
                            size_hint_y: 0.15
                            padding: 5, 2, 5, 2
                            BoxGrey1:
                                padding: 4, 2, 4, 2
                                BoxBlack:
                                    padding: 10, 4, 10, 4
# Button New User registration
                                    ButRoundThin:
                                        id: but_new_user
                                        font_size: self.height * 0.6
                                        on_release: root.reg_user()
# Box new game
                        BoxBlack:
                            size_hint_y: 0.15
                            padding: 5, 2, 5, 2
                            BoxGrey1:
                                padding: 4, 2, 4, 2
                                BoxBlack:
                                    padding: 10, 4, 10, 4
# Button create new game                                    
                                    ButRoundThin:
                                        id: but_new_game
                                        font_size: self.height * 0.6
###
# Box Right                
                BoxBlack:
                    padding: 2
                    BoxGrey2:
                        padding: 2
                        BoxBlack:
                            padding: 2
                            BoxGrey1:
                                padding: 2
                                spacing: 2
                                orientation: 'vertical'
                                BoxBlack:
                                    BoxGrey2:
                                        padding: 2
                                        spacing: 2
                                        orientation: 'vertical'
###
#Box Label Titel gespeicherte Spielebox                                        
                                        BoxBlack:
                                            padding: 2
                                            size_hint_y: 0.075
# Label Titel gespeicherte Spielebox                                            
                                            LabelTitel:
                                                id: lab_tit_game_saves
                                                font_size: self.height * 0.7
# Box mit den anzeigen der gespeicherten Spiele                                        
                                        BoxBlack:
                                            orientation: 'vertical'
                                            padding: 2
                                            spacing: 2
                                            BoxShowSavedGames:
                                                id: box_sg_1
                                            BoxShowSavedGames:
                                                id: box_sg_2
                                            BoxShowSavedGames:
                                                id: box_sg_3
                                            BoxShowSavedGames:
                                                id: box_sg_4
                                            BoxShowSavedGames:
                                                id: box_sg_5
# Box f√ºr weiteres
                                BoxBlack:
                                    padding: 150, 15, 150, 15
                                    size_hint_y: 0.05
###
# Start Bottombox
            BoxBottom:
                id: box_bottom